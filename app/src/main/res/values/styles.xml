<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Regular font -->
        <item name="android:fontFamily">@font/montserrat_regular_font</item>
        <item name="fontFamily">@font/montserrat_regular_font</item>

        <!-- Bold font -->
        <item name="android:textStyle">normal|bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>

        <!-- Italic font -->
        <item name="android:textStyle">normal|italic</item>
        <item name="android:fontFamily">@font/montserrat_italic</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_bold_font</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Rounded alert dialog window -->
    <style name="RoundedAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

        <!-- Base theme for the Material Calendar -->
        <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
            <item name="colorPrimary">@color/primary</item>
            <item name="materialCalendarStyle">@style/CustomMaterialCalendar</item>
            <item name="materialCalendarFullscreenTheme">@style/CustomMaterialCalendarFullscreen</item>
        </style>

        <!-- Custom Material Calendar Style -->
        <style name="CustomMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
<!--            <item name="android:background">@drawable/rounded_calendar_background</item>-->
            <item name="android:textColorPrimary">@color/text</item>
            <item name="android:textColorSecondary">@color/text</item>
            <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        </style>

        <!-- Custom Material Calendar Fullscreen Style -->
        <style name="CustomMaterialCalendarFullscreen" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
<!--            <item name="android:background">@drawable/rounded_calendar_background</item>-->
            <item name="android:textColorPrimary">@color/text</item>
            <item name="android:textColorSecondary">@color/text</item>
            <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        </style>

        <!-- Shape Appearance for rounded corners -->
        <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
            <item name="cornerSize">50dp</item>
        </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background_card</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


</resources>
